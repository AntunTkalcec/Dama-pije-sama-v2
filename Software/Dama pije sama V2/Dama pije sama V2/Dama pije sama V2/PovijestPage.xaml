<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Dama_pije_sama_V2.PovijestPage">
    <ContentPage.Content>
        <StackLayout BackgroundColor="#EEEEEE">
            <Frame BackgroundColor="#C4C4C4">
                <StackLayout>
                    <Label Text="Povijest" TextColor="#000" FontSize="24" FontFamily="Spicy Rice" CharacterSpacing="0.35"/>
                    <BoxView Color="#000" HeightRequest="1"/>
