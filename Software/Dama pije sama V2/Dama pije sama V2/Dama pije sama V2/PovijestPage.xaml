                            </StackLayout>
                        </StackLayout>
                    </Frame>
                </StackLayout>
            </ScrollView>
            <Image Source="GumbILabelZaPovratak" HeightRequest="100">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="PovratakGumb_Tapped"/>
                </Image.GestureRecognizers>
            </Image>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>